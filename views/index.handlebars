<div class="row">
  <div class="card col">
    <div class="card-header bg-primary text-white font-weight-bold">
      Burgers that are waiting to be devoured!
    </div>
    <div class="card-body">
      <h5 class="card-title">
        <ul class ="mb-2">
          {{#each burgers}}
          {{#unless devoured}}
          {{> burgers/burger-block devoured=true}}
          {{/unless}}
          {{/each}}
        </ul>
      </h5>
    </div>
  </div>

  <br>

  <div class="card col">
    <div class="card-header bg-primary text-white font-weight-bold">
      Devoured!
    </div>
    <div class="card-body">
      <h5 class="card-title">
        <ul class="mb-2">
          {{#each burgers}}
          {{#if devoured}}
          {{> burgers/burger-block1 }}
          {{/if}}
          {{/each}}
        </ul>
      </h5>
    </div>
  </div>
</div>
<br>
<h4>Add a Burger</h4>
<form class="create-form">
  <div class="form-group">
    <label for="formGroupExampleInput2">Burger Name:</label>
    <input type="text" class="form-control" id="bu" name="name">
  </div>
  <button type="submit" class="btn btn-primary" id="add">Submit</button>
</form>




<footer class="text-center">
  <p> </p>
</footer>